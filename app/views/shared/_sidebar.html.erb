<div class="sidebar w-[250px] h-[calc(100vh_-_70px)] shadow-lg bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 text-[#ecf0f1] overflow-hidden transition-[width] duration-[0.3s] flex flex-col" id="sidebar">
    <section class="mb-8">
        <h2 class="text-xl text-center font-semibold border-b border-gray-300 dark:border-gray-700 my-4 text-gray-900 dark:text-gray-100">Users</h2>
        <div class="bg-white dark:bg-gray-800 shadow p-4">
          <%= turbo_stream_from "users" %>
          <div id="users"><%= render partial: 'shared/sidebar_user', collection: users %></div>
        </div>
  </section>
  <section class="mb-8">
        <h2 class="text-xl text-center font-semibold border-b border-gray-300 text-gray-900 dark:text-gray-100 dark:border-gray-700 mt-4">Groups</h2>
        <div class="bg-white dark:bg-gray-800 shadow p-4">
        <div class="border-b dark:border-gray-700"><%= link_to "Create a Chat Room", new_chatroom_path, class:"text-gray-900 dark:text-gray-100 hover:text-gray-500 dark:hover:text-gray-300" %></div>
          <% if rooms.empty? %>
            <div class="text-gray-900 dark:text-gray-100">Not chat rooms available.</div>
          <% end %>
          <div id="rooms">
            <%= turbo_stream_from "rooms" %>
            <%= render rooms %>
          </div>
        </div>
  </section>
</div>