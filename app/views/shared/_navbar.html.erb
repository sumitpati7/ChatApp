<header class="navbar h-[70px] flex gap-4 shadow-lg items-center flex-row-reverse px-4">
    <% if current_user %>
        <%= button_to "Log Out", destroy_user_session_path, method: :delete %>
        <% if current_user.profile_completed? %>
        <div class="bg-[#<%=SecureRandom.hex(3)%>]"><%=current_user.first_name[0]+current_user.last_name[0]%></div>
        <% end %>
    <% else %>
        <%= link_to "Log In", new_user_session_path %>
    <% end %>
</header>